{% extends 'base.html.twig' %}

{% block title %}Liste des éditeurs{% endblock %}

{% block body %}
<div class="example-wrapper py-5">
    <h1>Liste des éditeurs</h1>
    
    <a href="{{path('app_admin_editor_new')}}" class="btn btn-primary mb-3 mt-3">Ajouter un éditeur</a>
    <ul class="list-group list-group-flush">
        {% for editor in editors %}
            <div class="card mb-1">
                <div class="card-body">
                    <div class="card-title d-flex justify-content-between">
                        <a href="{{ path('app_admin_editor_edit',{id: editor.id}) }}" class="stretched-link link-dark">
                            <h4 class="mb-1">{{ editor.name }}</h4>
                        </a>
                        <small class="text-muted">Identifiant : {{ editor.id }}</small>
                    </div>
                </div>
            </div>
        {% endfor %}
    </ul>
</div>
{% endblock %}
